{
  "name": "typescript-kit",
  "version": "0.2.0",
  "description": "A template for starting a TypeScript node project.",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config --respawn src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .js,.ts",
    "format": "prettier --write \"./**/*.{js,ts,json}\""
  },
  "author": "Sakari Mursu <sakari@mursu.dev>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^14.18.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv": "^8.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "jest": "^27.0.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.2",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  }
}
