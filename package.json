{
  "name": "typescript-kit",
  "version": "0.1.0",
  "description": "A template kit for node apps with TypeScript",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=development NODE_PATH=src/ ts-node -r dotenv/config src/index.ts",
    "production": "NODE_ENV=production NODE_PATH=dist/ node -r dotenv/config dist/index.js",
    "test": "jest",
    "lint": "eslint '*/**/*.{js,ts}'",
    "lint:fix": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "format": "prettier --write \"./**/*.{js,ts,json}\""
  },
  "author": "Sakari Mursu <sakari@mursu.dev>",
  "license": "MIT",
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.3",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^26.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.8.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  }
}
