{
  "name": "typescript-kit",
  "version": "0.1.0",
  "description": "A template for starting a TypeScript node project.",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=development NODE_PATH=src/ ts-node -r dotenv/config src/index.ts",
    "production": "NODE_ENV=production NODE_PATH=dist/ node -r dotenv/config dist/index.js",
    "test": "jest",
    "lint": "eslint '*/**/*.{js,ts}'",
    "lint:fix": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "format": "prettier --write \"./**/*.{js,ts,json}\""
  },
  "author": "Sakari Mursu <sakari@mursu.dev>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.18.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-jest": "^26.6.3",
    "dotenv": "^8.6.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  }
}
